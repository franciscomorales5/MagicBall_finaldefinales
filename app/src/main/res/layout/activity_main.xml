<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo4"
    android:orientation="vertical"
    android:outlineProvider="paddedBounds"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="40dp"
        android:fontFamily="serif-monospace"
        android:text="CONOCE TU FUTURO"
        android:textColor="#CDCD16"
        android:textSize="28sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:hint="Escribe tu mensaje"
        android:inputType="textShortMessage"
        android:textColor="#CDCD16"
        android:textSize="24sp"
        android:textStyle="italic"
        android:layout_marginBottom="20dp"
        android:background="#877900"
        />

    <ImageButton
        android:id="@+id/btn"
        android:layout_width="557dp"
        android:layout_height="366dp"
        android:layout_gravity="center"
        android:layout_margin="0dp"
        android:layout_marginBottom="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/magicballfinal"
        android:visibility="visible" />

    <TextView
        android:id="@+id/respuestavista"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_gravity="center"
        android:layout_margin="0dp"
        android:text="..."
        android:textColor="#CDCD16"
        android:textSize="20sp"
        android:textStyle="bold" />


</LinearLayout>